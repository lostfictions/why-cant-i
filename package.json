{
  "name": "heathbot",
  "version": "0.0.1",
  "description": "a bot that posts on both twitter and mastodon.",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "twoot-one": "node dist/main.js once",
    "build": "rm -rf dist/ && tsc",
    "test": "tsc --noEmit && eslint 'src/**' && prettier 'src/**' -l",
    "watch": "tsc -w",
    "dev": "ts-node-dev --respawn --transpileOnly --notify=false src/main.ts -- local"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "axios": "^0.19.0",
    "canvas": "^2.5.0",
    "cheerio": "^0.22.0",
    "envalid": "^5.0.0",
    "source-map-support": "^0.5.12",
    "twoot": "0.0.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.11",
    "@types/node": "^12.0.4",
    "@typescript-eslint/eslint-plugin": "^1.8.0",
    "@typescript-eslint/parser": "^1.8.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "prettier": "^1.17.1",
    "ts-node-dev": "^1.0.0-pre.39",
    "typescript": "^3.5.1"
  },
  "engines": {
    "node": ">=10.1.0"
  }
}
